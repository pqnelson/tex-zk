\def\resetParagraphChunks{
  \gdef\secprefix{}
  \global\sectionDepth=0
  \setSection{0}
}
\DeclareRobustCommand\chunks@start@subsection{\resetParagraphChunks%
  \gdef\theHchunk{\thesubsection.\secprefix\arabic{chunk}.}%
  \gdef\nodeprefix{\thesubsection}}
\DeclareRobustCommand\chunk@start@section{\resetParagraphChunks%
  \gdef\theHchunk{\thesection\secprefix\arabic{chunk}.}%
  \gdef\nodeprefix{\thesection}}


\def\partrunhead#1#2#3{%
  \@ifnotempty{#2}{\uppercase{\ignorespaces#1 #2\unskip}\@ifnotempty{#3}{. }}%
  \def\@tempa{#3}%
  \ifx\@empty\@tempa\else
    \begingroup \def\\{ \ignorespaces}% defend against questionable usage
    \uppercasenonmath\@tempa\@tempa
    \endgroup
  \fi
}
\let\chapterrunhead\partrunhead
\let\sectionrunhead\partrunhead
\def\partname{Part}
\def\part{\@startsection{part}{0}%
  \z@{\baselineskip\@plus\baselineskip}{.5\baselineskip}%
  {\normalfont\bfseries\raggedright}}
\def\specialsection{\@startsection{section}{1}%
  \z@{\baselineskip\@plus\baselineskip}{.5\baselineskip}%
  {\normalfont\centering}}
\def\section{\protect\chunk@start@section\@startsection{section}{1}%
  \z@{.7\baselineskip\@plus\baselineskip}{.5\baselineskip}%
  {\normalfont\scshape\centering}}
\def\subsection{\protect\chunks@start@subsection\@startsection{subsection}{2}%
  \parindent{.5\baselineskip\@plus.7\baselineskip}{.5\baselineskip}%-.5em}%
  {\normalfont\bfseries}}
